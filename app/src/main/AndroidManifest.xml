<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.example.tomi.namecardnfcapp">
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.tomi.namecardnfcapp.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.tomi.namecardnfcapp.ListActivity" />
        <activity
            android:name="com.example.tomi.namecardnfcapp.EditorActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.tomi.namecardnfcapp.CardViewActivity"
            android:screenOrientation="landscape"></activity>
        <activity android:name="com.example.tomi.namecardnfcapp.NFCActivity"></activity>
    </application>

</manifest>
